<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:id="@+id/card_view_response"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/shadow_card_layout"
    android:weightSum="4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_weight="1.5"
            android:text="Textview"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:layout_height="match_parent"
            android:id="@+id/response_user_name"
            android:textSize="12dp"
            android:gravity="left"
            android:textStyle="bold"
            />

        <TextView
            android:layout_weight="0.5"
            android:text="Textview"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/response_date"
            android:textSize="12dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/remark_description"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1.5"
            android:paddingLeft="5dp"
            android:paddingRight="25dp"
            android:paddingStart="25dp"
            android:paddingTop="25dp"
            android:shadowColor="@color/colorPrimary"
            android:shadowDy="@android:integer/config_longAnimTime"
            android:textSize="15dp" />

        <TextView
            android:text="3"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:id="@+id/response_price"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="2"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/button_call"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CALL"
            android:textSize="12dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/button_message"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="MESSAGE"
            android:textSize="12dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            />


    </LinearLayout>
</LinearLayout>